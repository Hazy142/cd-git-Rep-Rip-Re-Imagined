{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Module/path aliases */
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },

    /* Misc */
    "skipLibCheck": true,
    "allowJs": true,
    "types": [
      "node"
    ]
  },
  "include": ["src", "vite.config.ts"]
}
